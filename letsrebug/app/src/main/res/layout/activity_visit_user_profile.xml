<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".VisitUserProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            >
            <ImageView
                android:id="@+id/cover_display"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/cover"
                android:scaleType="centerCrop"

                >
            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_display"
                android:layout_width="151dp"
                android:layout_height="151dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pro_temp"

                >

            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/username_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suffer :)"
                android:layout_below="@+id/profile_display"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                >

            </TextView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/socialbarset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv1"
        android:gravity="center"
        android:background="@color/colorProfile"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="7dp"

        >

        <ImageView
            android:id="@+id/link_display"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/in"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginRight="35dp"
            android:layout_gravity="center">

        </ImageView>

        <ImageView
            android:id="@+id/git_display"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/gi"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="35dp"
            android:layout_gravity="center">

        </ImageView>

        <ImageView
            android:id="@+id/stack_display"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/stf"
            android:scaleType="centerCrop"
            android:layout_marginTop="3dp"
            android:layout_gravity="center">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/socialbarset"
        android:layout_centerHorizontal="true"

        >
    </LinearLayout>

    <Button
        android:id="@+id/send_msg_btn"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/socialbarset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorDrama"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:text="Send Message"
        android:textSize="20sp"
        android:fontFamily="sans-serif-light"


        >

    </Button>


</RelativeLayout>